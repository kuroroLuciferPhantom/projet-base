<script>
    // Ajouter ici les scripts spécifiques à la page d'accueil
    document.addEventListener('DOMContentLoaded', function() {
        // Code JavaScript pour animer les éléments, etc.
        console.log('Page d\'accueil chargée');
        
        // Animation des cartes dans le hero
        const heroCards = document.querySelectorAll('.hero-cards .card');
        heroCards.forEach((card, index) => {
            setTimeout(() => {
                card.classList.add('animated');
            }, 200 * index);
        });
        
        // Animation des éléments au scroll
        const animateOnScroll = (entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view');
                    observer.unobserve(entry.target);
                }
            });
        };
        
        const observer = new IntersectionObserver(animateOnScroll, {
            root: null,
            threshold: 0.1,
            rootMargin: '-100px'
        });
        
        document.querySelectorAll('.feature-card, .card-preview, .booster-card, .roadmap-item, .gameplay-feature').forEach(item => {
            observer.observe(item);
        });
    });
</script>
